docker {
       enabled = true
       temp = 'auto'
}

profiles {
         standard {
                  process.executor      = 'local'
                  process.container     = 'ezorita/seq-analysis'
                  process.$mapReads.cpus = 12
         }

         crg-cluster {
                 process {
                         executor  = 'crg'
                         queue     = 'short-sl7'
                         scratch   = true
                         memory    = '4G'
                         container = 'ezorita/seq-analysis'
                 }
         }

}

executor {
         name          = 'sge'
         pollInterval  = '10sec'
         queueSize     = 100
}
